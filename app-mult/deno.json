{
  "version": "1.0.0",
  "description": "A DWeb framework project",
  "tasks": {
    "dev:backend": "deno run -A ../src/cli.ts dev:backend",
    "dev:frontend": "deno run -A ../src/cli.ts dev:frontend",
    "build:backend": "deno run -A ../src/cli.ts build:backend",
    "build:frontend": "deno run -A ../src/cli.ts build:frontend",
    "start:backend": "deno run -A ../src/cli.ts start:backend",
    "start:frontend": "deno run -A ../src/cli.ts start:frontend"
  },
  "imports": {
    "@dreamer/dweb": "../src/mod.ts",
    "preact": "https://esm.sh/preact@latest",
    "preact/hooks": "https://esm.sh/preact@latest/hooks",
    "preact/jsx-runtime": "https://esm.sh/preact@latest/jsx-runtime",
    "preact/signals": "https://esm.sh/@preact/signals@latest?external=preact",
    "preact-render-to-string": "npm:preact-render-to-string@6.5.1",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@tailwindcss/postcss": "npm:@tailwindcss/postcss@^4.1.10"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}

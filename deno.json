{
  "vendor": true,
  "name": "@dreamer/dweb",
  "version": "1.8.7",
  "license": "MIT",
  "exports": {
    ".": "./src/mod.ts",
    "./cli": "./src/cli.ts",
    "./init": "./src/init.ts",
    "./client": "./src/client.ts",
    "./console": "./src/console/mod.ts",
    "./database": "./src/features/database/mod.ts",
    "./extensions": "./src/extensions/mod.ts",
    "./extensions/validation": "./src/extensions/helpers/validation.ts",
    "./extensions/format": "./src/extensions/helpers/format.ts",
    "./extensions/crypto": "./src/extensions/helpers/crypto.ts",
    "./extensions/cache": "./src/extensions/helpers/cache.ts",
    "./extensions/http": "./src/extensions/helpers/http.ts",
    "./extensions/web3": "./src/extensions/helpers/web3.ts",
    "./extensions/utils": "./src/extensions/helpers/utils.ts",
    "./extensions/storage": "./src/extensions/helpers/storage.ts",
    "./extensions/url": "./src/extensions/helpers/url.ts",
    "./extensions/time": "./src/extensions/helpers/time.ts",
    "./extensions/array": "./src/extensions/helpers/array.ts",
    "./extensions/math": "./src/extensions/helpers/math.ts",
    "./extensions/file": "./src/extensions/helpers/file.ts"
  },
  "description": "A modern full-stack web framework based on Deno + Preact + Tailwind CSS",
  "tasks": {
    "dev": "deno run -A src/cli.ts dev",
    "build": "deno run -A src/cli.ts build",
    "start": "deno run -A src/cli.ts start",

    "compile": "deno compile -A --output bin/dweb src/cli.ts",

    "lint": "deno lint src/ example/",
    "fmt": "deno fmt src/ example/",
    "fmt:check": "deno fmt --check src/ example/",
    "check": "deno check src/ example/",
    "setup:hooks": "./scripts/setup-git-hooks.sh",
    "test": "deno test --allow-all tests/",
    "test:unit": "deno test --allow-all tests/unit/",
    "test:integration": "deno test --allow-all tests/integration/",
    "test:coverage": "sh -c 'deno test --allow-all --no-check --coverage=coverage tests/ 2>&1 | grep -vE \"(Error generating coverage report|致命错误)\" || true; deno coverage coverage --ignore=\"tests/fixtures/.*\" --exclude=\"tests/fixtures/.*\" 2>&1 | grep -vE \"(Error generating coverage report|致命错误)\" || true'"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/fs": "jsr:@std/fs@^1.0.2",

    "preact": "https://esm.sh/preact@10.28.0",
    "preact/": "https://esm.sh/preact@10.28.0/",
    "preact-render-to-string": "https://esm.sh/preact-render-to-string@6.5.1?external=preact",

    "@std/path": "jsr:@std/path@^1.1.3",
    "@std/fs/ensure_dir": "jsr:@std/fs@^1.0.2/ensure-dir",
    "@std/fs/copy": "jsr:@std/fs@^1.0.2/copy",
    "@std/fs/exists": "jsr:@std/fs@^1.0.2/exists",
    "@std/fs/walk": "jsr:@std/fs@^1.0.2/walk",
    "@std/crypto": "jsr:@std/crypto@1",
    "@std/path/glob-to-regexp": "jsr:@std/path@^1.1.3/glob-to-regexp",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "tailwindcss-v3": "npm:tailwindcss@^3.4.0",
    "@tailwindcss/postcss": "npm:@tailwindcss/postcss@^4.1.10",
    "postcss": "npm:postcss@8.5.6",
    "postcss-v3": "npm:postcss@^8.4.35",
    "autoprefixer": "npm:autoprefixer@^10.4.17",
    "cssnano": "npm:cssnano@^6.0.3",
    "esbuild": "npm:esbuild@0.19.12",
    "@sqlite": "https://deno.land/x/sqlite@v3.7.3/mod.ts",
    "@postgres": "npm:postgres@^3.4.3",
    "@mysql": "https://deno.land/x/mysql@v2.12.1/mod.ts",
    "@mongodb": "npm:mongodb@^6.3.0",
    "sharp": "npm:sharp@^0.34.5"
  },
  "scopes": {
    "https://esm.sh/": {
      "preact": "https://esm.sh/preact@10.28.0",
      "preact/": "https://esm.sh/preact@10.28.0/"
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    }
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "exclude": [
    "**/example/**",
    "**/tests/**",
    "**/coverage/**",
    "**/node_modules/**",
    "**/vendor/**",
    "**/dist/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/deno.lock"
  ],
  "publish": {
    "include": ["src/**", "deno.json", "README.md", "LICENSE", "SECURITY.md"],
    "exclude": [
      "**/example/**",
      "**/tests/**",
      "**/coverage/**",
      "**/node_modules/**",
      "**/vendor/**",
      "**/dist/**",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/deno.lock",
      "**/.git/**",
      "**/docs/**"
    ]
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "nodeModulesDir": "auto",
  "allowScripts": {
    "allow": [],
    "deny": ["npm:esbuild@0.19.12", "npm:fsevents@2.3.3", "npm:sharp@0.34.5"]
  }
}

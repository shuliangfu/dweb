{
  "version": "2.0.6",
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run -A ../src/cli.ts dev",
    "build": "deno run -A ../src/cli.ts build",
    "start": "deno run -A ../src/cli.ts start"
  },
  "imports": {
    "@components/": "./components/",
    "@services/": "./services/",
    "@plugins/": "./plugins/",
    "@config/": "./config/",
    "@store/": "./stores/",
    "@hooks/": "./hooks/",
    "@utils/": "./utils/",

    "@dreamer/dweb": "../src/mod.ts",
    "@dreamer/dweb/cli": "../src/cli.ts",
    "@dreamer/dweb/client": "../src/client/mod.ts",
    "@dreamer/dweb/console": "../src/server/console/mod.ts",
    "@dreamer/dweb/database": "../src/features/database/mod.ts",
    "@dreamer/dweb/extensions": "../src/common/extensions/mod.ts",

    "@std/fs": "jsr:@std/fs@^1.0.20",
    "@std/path": "jsr:@std/path@^1.1.3",
    "@std/fs/ensure_dir": "jsr:@std/fs@^1.0.20/ensure-dir",
    "@std/fs/copy": "jsr:@std/fs@^1.0.20/copy",
    "@std/fs/exists": "jsr:@std/fs@^1.0.20/exists",
    "@std/fs/walk": "jsr:@std/fs@^1.0.20/walk",
    "@std/path/glob-to-regexp": "jsr:@std/path@^1.1.3/glob-to-regexp",
    "@std/crypto": "https://deno.land/std@0.208.0/crypto/mod.ts",

    "preact": "npm:preact@10.28.0",
    "preact/hooks": "npm:preact@10.28.0/hooks",
    "preact/jsx-runtime": "npm:preact@10.28.0/jsx-runtime",
    "preact/signals": "https://esm.sh/@preact/signals@1.2.2?external=preact",

    "tailwind-merge": "npm:tailwind-merge@2.5.4",

    "esbuild": "npm:esbuild@0.19.12",
    "@sqlite": "https://deno.land/x/sqlite@v3.7.3/mod.ts",
    "@postgres": "npm:postgres@^3.4.3",
    "@mysql": "https://deno.land/x/mysql@v2.12.1/mod.ts",
    "@mongodb": "npm:mongodb@^6.3.0",
    "sharp": "npm:sharp@^0.34.5",
    "chart": "npm:chart.js@4.4.7"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "allowScripts": {
    "allow": [],
    "deny": ["npm:esbuild@0.19.12", "npm:fsevents@2.3.3", "npm:sharp@0.34.5"]
  }
}
